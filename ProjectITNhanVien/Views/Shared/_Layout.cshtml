
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>RuangAdmin - Dashboard</title>
    <link href="~/Content/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Admin/css/ruang-admin.min.css" rel="stylesheet">
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/Content/Admin/css/bootstrap-datepicker.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        @{Html.RenderPartial("_Sidebar"); }
        <!-- Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- TopBar -->
                @{Html.RenderPartial("_Topbar"); }
                <!-- Topbar -->
                <!-- Container Fluid-->
                <div class="container-fluid" id="container-wrapper">
                    @RenderBody()

                </div>
                <!---Container Fluid-->
            </div>
            <!-- Footer -->
            @{Html.RenderPartial("_Footer"); }

            <!-- Footer -->
        </div>
    </div>

    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- datepicker -->
    <script src="~/Content/Admin//js/bootstrap-datepicker.min.js"></script>
    <script>
        $(function () {
            //Date picker
            $('#datepicker').datepicker({
                format: 'dd/MM/YYYY',
                autoclose: true
            })
            $('#datepicker1').datepicker({
                ormat: 'dd/MM/YYYY',
                autoclose: true
            })
        })
    </script>
    <script src="~/Content/Admin/js/ruang-admin.min.js"></script>
    <script src="~/Content/Admin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/Admin/js/demo/chart-area-demo.js"></script>

    @RenderSection("scripts", required: false)
</body>

</html>